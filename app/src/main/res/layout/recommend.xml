<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorViewGroupBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="@color/colorViewGroupBackground"
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/load_failed_ll"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/load_failed_tv"
            android:padding="15dp"
            android:clickable="true"
            android:textColor="@color/colorTextViewGrey"
            android:text="@string/load_failed_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:background="@color/colorViewGroupBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/gankRecommend_srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/gankRecommendlist_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
        <com.zhanghao.gankio.ui.widget.MyFloatingActionButton
            android:id="@+id/Recommend_search_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="72dp"
            app:elevation="5dp"
            app:backgroundTint="@color/colorAccent"
            android:src="@drawable/ic_search_black_24dp"
            app:borderWidth="1dp"
            />
    </RelativeLayout>
</LinearLayout>